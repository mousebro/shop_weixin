.coupon-List3>.coupon-item .title3{font-size:26rpx;text-align: center;}
.coupon-List3>.coupon-item>.btn3{width: 130rpx;height: 51rpx;margin:0 0 20rpx;line-height: 51rpx;}
.coupon-List3>.coupon-item>.coupon-limit>text:nth-child(2){font-size:48rpx;}
.coupon-List3>.coupon-item text.limit-msg{font-size:18rpx;}

/*印戳*/
.stamp{position: absolute;}
.stamp01{width:200rpx;height:200rpx;right:100rpx;top:-50rpx;transform: rotate(-60deg);}
.stamp02{width:148rpx;height:148rpx;right:-10rpx;top:-10rpx;transform: rotate(10deg);}
.stamp03{width:94rpx;height:94rpx;right:-30rpx;bottom:100rpx;transform: rotate(10deg);}
