.share-button text{margin-top: -38rpx;} */

/*推荐文章*/
.article-recommend-msg{font-size:36rpx;color:#222222;font-weight: bold;display: inline-block;line-height: 40rpx;}
.article-recommend-msg::before{content: "";display: inline-block;width: 8rpx;height: 34rpx;background:linear-gradient(to bottom,#ff6849,#ea4149);border-radius: 4rpx;margin: 2rpx 20rpx 0;vertical-align: bottom;}

.list-masonry{display: flex;justify-content: space-between;flex-wrap: wrap;padding:20rpx 20rpx 150rpx;}
.item-masonry{position: relative;background-color: #fff;break-inside: avoid; box-sizing: border-box; border-radius: 10rpx;overflow: hidden;width:347rpx;height:533rpx;margin-bottom:20rpx;}
/* .item-masonry::after{display: block;content:'';width: 100%;position: relative;height:10rpx;bottom:0;background: #f2f2f2;} */
.item-masonry .img-container {height: 347rpx;width: 347rpx;overflow: hidden;}
.item-masonry .firstImg {height: 347rpx;width: 347rpx;}
.item-masonry .video-icon {width: 70rpx;height: 70rpx;position: absolute;top:20rpx;right:20rpx;background: rgba(255,255,255,.2);border-radius: 70rpx;}
.item-masonry>.title-container{width: calc(100% - 40rpx); padding:20rpx;border-bottom-left-radius: 20rpx;border-bottom-right-radius: 20rpx;}
.item-masonry>.title-container>.title{font-size:26rpx;color:#222222;text-overflow: -o-elipsis-lastline;overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp:2;line-clamp:2;-webkit-box-orient: vertical;margin-bottom:20rpx;}
.title-container>view{display: flex;width: 100%;justify-content:space-between;font-size:24rpx;color:#222;}
.title-container>view>.avatar-container,.zan-container{width: 50%;display: flex;align-items: center;overflow: hidden;}
.title-container>view>.avatar-container>.avatar-img{width:40rpx;height: 40rpx;border-radius: 40rpx;margin-right:10rpx;}
.title-container>view>.zan-container>.avatar-img{width: 30rpx;height: 30rpx;margin-right: 5rpx;}
.title-container>view>.zan-container{justify-content: flex-end;}

.noMsg-line{font-size: 24rpx;color:#555555;text-align: center;display: flex;justify-content: center;align-items: center;width: 100%;}
.noMsg-line::before,.noMsg-line::after{display: inline-block;content: '';width: 120rpx;height: 2rpx;background:#a8a8a8; }
.noMsg-line::after{margin-left: 20rpx;}
.noMsg-line::before{margin-right: 20rpx;}