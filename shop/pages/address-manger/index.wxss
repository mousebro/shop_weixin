/* pages/address/index.wxss */
page{background: #f2f2f2;height:calc(100% - 20rpx)}
.address-container{height:100%;margin-top:20rpx;background:#fff;position: relative;}

/*收货人信息*/
.address-item{display: flex;justify-content: space-between;font-size:28rpx;padding:30rpx 20rpx 30rpx 0;border-bottom: 1px solid #f2f2f2;margin-left: 30rpx;}
.address-item-text{width:30%;line-height:45rpx;height:45rpx;margin-top:5rpx;}
.address-item-input{width:70%;line-height:45rpx;height:45rpx;}
.address-location{align-items: center;padding:40rpx 20rpx 40rpx 0;}
.address-item-belong{font-size: 28rpx;}

/*所在地区*/
.address-belong{display:flex;justify-content:space-between;border-bottom:1px solid #f2f2f2;line-height:100rpx;align-items:center;margin-left: 30rpx;padding-right:30rpx;}
.address-msg{width:500rpx;height:100rpx;display:flex;justify-content:flex-end;align-items:center;}
.more-pic{height:25rpx;width:15rpx;margin-left:20rpx}
/*新建收货地址按钮*/
.add-address-btn{position: absolute;bottom:0;width: 95%;margin:20rpx;background:linear-gradient(to right bottom,#eb414a 10%,#fe6748);color:#fff;}