    </view>
    <view wx:if="{{couponList.length == 0}}" class="countprice-less clearfix">
      <text>优惠券</text>
      <text>-￥0</text>
    </view>
    <view wx:if="{{choseCoupon}}" class="countprice-less clearfix">
