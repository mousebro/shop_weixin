  <!-- 订单地址昵称等信息 -->
  <view class="address">
    <text>{{userName}}</text>
    <text>{{mobile}}</text>
    <text>{{address}}</text>
  </view>
  <!-- 商品信息 -->
  <view class="shop">
    <block wx:for="{{shopList}}">
      <view class="shop-block clearfix">
        <image src="/pic/banner1.png"/>
        <text>{{item.name}}</text>
        <text>￥{{item.price/100}}</text>
        <text>x{{item.count}}</text>
      </view>
    </block>
  </view>
  <!-- 价格结算 -->
  <view class="countprice">
    <view class="countprice-plus clearfix">
      <text>商品金额</text>
      <text>￥{{totalPrice/100}}</text>
    </view>
    <view class="countprice-plus clearfix">
      <text>运费</text>
      <text>￥{{fare/100}}</text>
    </view>
