/* pages/article-collection/index.wxss */
page{background-color: #eee;height: 100%;}
.case-page{height: 100%;}
.scroll-view-container{height: 1200rpx;}
.list-masonry{column-count: 2;column-gap: 10rpx;background-color: #ececec;padding:10rpx 10rpx 0rpx;box-sizing: border-box;}
.item-masonry{position: relative;background-color: #fff;break-inside: avoid; box-sizing: border-box; border-radius: 10rpx;overflow: hidden;}
.list-masonry>.item-masonry:not(:nth-child(2)){margin-bottom: 10rpx;}
.item-masonry .firstImg {width: 100%;}
.item-masonry .video-icon {width: 70rpx;height: 70rpx;position: absolute;top:20rpx;right:20rpx;background: rgba(255,255,255,.2);border-radius: 70rpx;}
.item-masonry>.title-container{width: calc(100% - 40rpx); padding:20rpx;}
.item-masonry>.title-container>.title{font-size:26rpx;color:#222222;text-overflow: -o-elipsis-lastline;overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp:2;line-clamp:2;-webkit-box-orient: vertical;margin-bottom:20rpx;}
.title-container>view{display: flex;width: 100%;justify-content:space-between;font-size:24rpx;color:#222;}
.title-container>view>.avatar-container,.zan-container{width: 50%;display: flex;align-items: center;overflow: hidden;}
.title-container>view>.avatar-container>.avatar-img{width:40rpx;height: 40rpx;border-radius: 40rpx;margin-right:10rpx;}
.title-container>view>.zan-container>.avatar-img{width: 30rpx;height: 30rpx;margin-right: 5rpx;}
.title-container>view>.zan-container{justify-content: flex-end;}

 /*隐藏scroll-view的滚动条*/
::-webkit-scrollbar{ width: 0;height: 0;color: transparent;}
.none-msg{display: flex;width: 100%;height: 100%; align-items: center;justify-content: center;color: #222222;}

.clearfix:after {content: " ";display: block;height: 0;clear: both;visibility: hidden;}
/*底部tab*/

.isIpx{padding: 10rpx 0 68rpx;}
.imageFirst{width: 100%;max-height:60%;}

/*没有收藏*/
.nostosk{width: 300rpx;height:300rpx;}

/*头部*/
.header-tabbar{width: 100%;height:95rpx;display: flex;background: #fff;position: fixed;top:0;right:0;}
.header-tabbar>view>text:first-child{color:#ea4149;font-size:32rpx;display: inline-block;position: relative;}
.header-tabbar text.active::after{display: inline-block;width: 100rpx;height: 6rpx;content:'';background: #fff;position: absolute;bottom:-23rpx;left:0rpx;}
.header-tabbar>view{width: 100%;height: 100%;display: flex;justify-content: center;align-items: center;box-shadow: 0px 0px 23px 0px rgba(192, 192, 192, 0.43);}
.activeBar{display:inline-block;width: 100rpx;height:6rpx;background: #ea4149;position: absolute;top:90rpx;}
.activeBarMoveL{left:calc(75% - 48rpx);transition:all .3s linear;}
.activeBarMoveR{left:calc(50% - 48rpx);transition: all .3s linear;}

/*商品列表*/
.productList{background: #fff;}
.productList>view{display:flex;padding:35rpx 20rpx 10rpx;	}
.productList>view:not(:last-child){border-bottom: 1px solid #e8e8e8;}
.productList .productSubscrib{padding: 0rpx 0 0 40rpx;display: flex;flex-direction: column;justify-content: center;}
.productList .productSubscrib>text{font-size:32rpx;}
.productSubscrib>view:first-child{display: inline-block;width:100%;color:#222222;font-size:32rpx;margin-bottom:10rpx;overflow: hidden;text-overflow: ellipsis;line-clamp:2; text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    align-content: center
}
.productList .productSubscrib>view>text.marketprice{font-size:24rpx;color:#ea4149;display: inline-block;}
.productList .productSubscrib>view>text.priceA{font-size:40rpx;}
.productList .productSubscrib>view>text.priceB{font-size:24rpx;}
.productList .productSubscrib>view>text.productprice{font-size:24rpx;color:#777777;text-decoration:line-through;margin-left:20rpx;}
.productList .productSubscrib>view .slogan{padding:0rpx 10rpx;color:#ea4149;font-size:28rpx;border:1px solid #ea4149;border-radius:8rpx;margin-right:4rpx;}
.productList>view>view>image{width: 190rpx;height: 190rpx;}
.inline-view{display: inline-block;}
.block-view{display: block;}

