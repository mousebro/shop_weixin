  <!-- 蒙版 -->
  <view class="mask"  wx:if="{{showModal == true}}"/>
  <!-- 购物车弹窗 -->
  <view class="modal"  wx:if="{{modal1 == true}}">
    <view class="modal-shopDetail clearfix">
      <image src="{{thumbList[0]}}"/>
      <text>{{title}}</text>
      <text>￥{{price}}</text>
      <image bindtap="closeModal1" src="/images/close.png"/>
    </view>

    <view class="modal-shopCount">
       <text class="modal-shopCount-number">购买数量</text>
       <view class="modal-shopCount-box">
           <text class="modal-shopCount-less {{buyNumber == buyNumMin ? 'hui': ''}}" bindtap="lessTap">-</text>
           <view class="modal-shopCount-input">
              <input type="number" value="{{buyNumber}}" disabled/>
           </view>
           <text class="modal-shopCount-plus {{buyNumber== buyNumMax ? 'hui': ''}}" bindtap="plusTap">+</text>
       </view>
    </view>
    <!-- <view class="modal-shopCount">

    </view> -->
    <text class="modal-bottomButton" bindtap="addShopCar">加入购物车</text>
  </view>
  <!-- 立即购买弹窗 -->
  <view class="modal"  wx:if="{{modal2 == true}}">
    <view class="modal-shopDetail clearfix">
      <image src="{{thumbList[0]}}"/>
      <text>{{title}}</text>
      <text>￥{{price}}</text>
      <image bindtap="closeModal2" src="/images/close.png"/>
    </view>

    <view class="modal-shopCount">
       <text class="modal-shopCount-number">购买数量</text>
       <view class="modal-shopCount-box">
           <text class="modal-shopCount-less {{buyNumber == buyNumMin ? 'hui': ''}}" bindtap="lessTap">-</text>
           <view class="modal-shopCount-input">
              <input type="number" value="{{buyNumber}}" disabled/>
           </view>
           <text class="modal-shopCount-plus {{buyNumber== buyNumMax ? 'hui': ''}}" bindtap="plusTap">+</text>
       </view>
    </view>
    <!-- <view class="modal-shopCount">

    </view> -->
    <text class="modal-bottomButton" bindtap="hrefToPay">立即购买</text>
  </view>
  <!-- 顶部栏位 -->
  <view class="shop-title clearfix">
    <text class="{{showActive == 'a1'?'shop-title-active':''}}" data-id="a1" bindtap="scrollPosition">商品</text>
    <text class="{{showActive == 'a2'?'shop-title-active':''}}" data-id="a2" bindtap="scrollPosition">详情</text>
    <text>评价</text>
  </view>
  <!-- 滚动区域 -->
    <scroll-view class="scroll-body" scroll-y="true" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}" scroll-with-animation="true">
    <!-- 商品轮播图 -->
    <view style="position:relative;">
      <swiper class="swiper shop-swiper" id="a1" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="1000" indicator-color="#cbcbcb" indicator-active-color="#ea4149">
        <block wx:for="{{4}}" wx:key="{{index}}">
          <swiper-item>
            <image lazy-load="true" src="../../../pic/product01.png" class="swiper-img"/>
          </swiper-item>
        </block>
      </swiper>
      <view class="shop-detail-name" >
        <view class="shop-detail-share ">
          <image src="/images/share.png" class="swiper-img" mode="aspectFill"/>
            <text>分享</text>
        </view>
      </view>
    </view>
    <!-- 商品名称以及价格 -->
    <view class="shop-detail">
      <!-- 价格、倒计时 -->
      <view style="background:#fff9f1 url(../../images/group-buy/group-detail.png) no-repeat;background-size:170rpx 150rpx" class="countDown" >
        <text class="countDown-group-number">3人成团</text>
        <view class="countDown-group-price">
          <text>￥199.90</text><text>￥368.90</text>
          <view>已拼<text>580</text>件</view>
        </view>
        <view>
          <text>距结束仅剩</text>
          <view><text>16</text>:<text>15</text>:<text>54</text></view>
        </view>
      </view>
      <!-- 商品名称 -->
      <view class="shop-detail-price">
        <text>53°茅台王子酒53°茅台王子酒</text>
      </view>
      <!-- 会员折扣 -->
      <view class="shop-detail-super">
        <image src="/images/super.png"  mode="widthFix"/>
        <text>会员下单再享98折，可省18.00元</text>
      </view>
    </view>
    <!--优惠券-->
    <view class='coupon-container'>
      <view>
        <text>优惠</text>
        <text>可享受以下优惠</text>
      </view>
      <view>
        <text>优惠券</text>
        <text>消费满1000立减50</text>
      </view>
    </view>
    <!-- 拼单用户列表 -->
    <view class="group-buy-list">
      <view class="group-buy-list-head">
        <text>37人在拼单，可直接参与</text>
        <text>查看全部></text>
      </view>
      <view class=" group-buy-list-item">
          <view>
            <image src="/pic/banner1.png"/>
            <text>喵喵酱</text>
          </view>
          <view>
            <view>
              <view>
                还差<text>1</text>人拼成
              </view>
              <text>剩余23:15:36</text>
            </view>
            <text>去拼单</text>
          </view>
      </view>
    </view>
    <!--拼团详情正在拼单列表-->
    <view class='mask' >
      <view class='group-buy-list-container' >
          <image src="../../images/group-buy/close.png" class="close-btn" bindtap='closeGroupList'></image>
          <view class='list-header' >正在拼单</view>
          <scroll-view style="height:calc(100% - 135rpx);width:90%;margin:auto;" scroll-y >
            <view wx:for="{{10}}" wx:key="{{index}}" class="group-list-item"  wx:if="{{index<10}}">
              <view  class="avator-name-container">
                <image src="/pic/banner1.png" class='avator'></image>
                <view>
                  <view>
                    <text class="name">喵咪酱</text>还差<text style="color:#ea4148">1</text>人
                  </view>
                   <view>剩余 14:12:08</view> 
                </view>              
              </view>
              <view  class="go-group-Btn">去拼单</view>
            </view>
          </scroll-view>
      </view>
    </view>
    <!-- 评价 -->
    <view class="shop-assess">
      <view class="shop-assess-title">
        <text>评价(123)</text>
        <text>查看全部></text>
      </view>
      <view class="shop-assess-info">
        <image src="/pic/banner1.png"/>
        <text>喵喵酱</text>
      </view>
      <view class="shop-assess-detail clearfix">
        <!-- <image src="/pic/banner1.png" class="swiper-img"/>
        <image src="/pic/banner1.png" class="swiper-img"/>
        <image src="/pic/banner1.png" class="swiper-img"/>
        <image src="/pic/banner1.png" class="swiper-img"/>
        <image src="/pic/banner1.png" class="swiper-img"/> -->
