page{background-color: #eee;}
.case-page{background: #eee;padding-bottom: 110rpx;}
.scroll-view-container{height: 1200rpx;}
.list-masonry{column-count: 2;column-gap: 10rpx;background-color: #ececec;padding:10rpx 10rpx 0;box-sizing: border-box;}
.item-masonry{position: relative;background-color: #fff;break-inside: avoid; box-sizing: border-box; border-radius: 10rpx;overflow: hidden;}
.item-masonry::after{display: block;content:'123132';width: 100%;position: relative;height:10rpx;bottom:0;background: #f2f2f2;}
.item-masonry .firstImg {width: 100%;}
.item-masonry .video-icon {width: 70rpx;height: 70rpx;position: absolute;top:20rpx;right:20rpx;background: rgba(255,255,255,.2);border-radius: 70rpx;}
.item-masonry>.title-container{width: calc(100% - 40rpx); padding:20rpx;border-bottom-left-radius: 20rpx;border-bottom-right-radius: 20rpx;}
.item-masonry>.title-container>.title{font-size:26rpx;color:#222222;text-overflow: -o-elipsis-lastline;overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp:2;line-clamp:2;-webkit-box-orient: vertical;margin-bottom:20rpx;}
.title-container>view{display: flex;width: 100%;justify-content:space-between;font-size:24rpx;color:#222;}
.title-container>view>.avatar-container,.zan-container{width: 50%;display: flex;align-items: center;overflow: hidden;}
.title-container>view>.avatar-container>.avatar-img{width:40rpx;height: 40rpx;border-radius: 40rpx;margin-right:10rpx;}
.title-container>view>.zan-container>.avatar-img{width: 30rpx;height: 30rpx;margin-right: 5rpx;}
.title-container>view>.zan-container{justify-content: flex-end;}

  /*头部导航栏*/
/*头部选项卡*/
.navbar{background: #fff;  top:0; z-index:100; white-space: nowrap;height:100rpx;width:100%}
.navbar .item{position: relative; flex: auto;text-align: center;line-height: 100rpx; color:#535353; font-size: 30rpx; display: inline-block; width: 22%; box-shadow: 0 5px 35rpx -10rpx #f2f2f2;z-index: 10;}
.navbar .item.active{ color: #000;font-weight:600;font-size:38rpx;}
.navbar .item.active:after{content: "";display: block;position: absolute;bottom: 30rpx; left: 0; right: 0; height: 8rpx; width:50%; margin: auto;background: #eb4249;z-index: -1;}

 /*隐藏scroll-view的滚动条*/
::-webkit-scrollbar{ width: 0;height: 0;color: transparent;}
/*0元购入口图标*/
.bargain-logo{position: fixed;right:0;top:600rpx;width:200rpx;height: 200rpx;}

.clearfix:after {content: " ";display: block;height: 0;clear: both;visibility: hidden;}
/*底部tab*/
.tabbar{width: 100%;position: fixed;bottom: 0;background-color: #F7F7FA;border-top: 1px solid #e8e8e8;padding: 10rpx 0;}
.tabbar-block{width: 25%;float: left;text-align: center;}
.tabbar-active{color: #ea4149;}
.tabbar-block image{width: 56rpx;height: 56rpx;}
.tabbar-block text{display: block;width: 100%;text-align: center;font-size: 20rpx;margin-top: -6rpx;}
.tabbar-block-cart{position: relative;}

