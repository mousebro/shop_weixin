/* pages/commit/index.wxss */
/*头部商品星级评价*/
page{background:#f2f2f2;height:calc(100% - 20rpx);}
.commit-container{background: #fff;padding:0 40rpx;height:calc(100% - 20rpx);position: relative;}
.commit-star-container{display: flex;justify-content: flex-start;background: #fff;margin-top:20rpx;padding:40rpx 0;}
.commit-star-container .product-img{height:110rpx;width:100rpx;margin-right:20rpx;}
.commit-star-container .commit-msg{font-size: 24rpx;margin-bottom: 10rpx;}
.commit-star-container .commit-star{width:30rpx;height:30rpx;margin-right: 10rpx;}

/*文本输入框*/
.commit-textarea{background:#f2f2f2;height:250rpx;width:100%;box-sizing:border-box;font-size:24rpx;padding:40rpx 20rpx;border-radius:10rpx;margin-bottom:50rpx;}

/*添加图片*/
.commit-addpic{height:120rpx;width:120rpx;}

/*提交按钮*/
.submitBtn{background:linear-gradient(to right bottom,#eb414a 10%,#fe6748);color:#fff;position:absolute;width: 90%;bottom:0;}