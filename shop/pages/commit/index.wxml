<!--pages/commit/index.wxml-->

<view class='commit-container'>
  <!--商品评分-->
  <view class='commit-star-container' style=''>
    <image src='../../pic/product01.png'  class='product-img'  mode="aspectFit"></image>
    <view >
      <view class="commit-msg">商品评分</view>
      <image class='commit-star' wx:for="{{5}}" wx:key="{{index}}" src="{{index<star?'../../images/product-commit/star-red.png':'../../images/product-commit/star-gray.png'}}" catchtap="setStar" data-idx="{{index+1}}"></image>
    </view>
  </view>
  <!--发表意见-->
  <form bindsubmit="bindFormSubmit">
      <!--文本输入框-->
      <textarea class='commit-textarea' placeholder='发表一下您的评价吧，您的评价能帮助其他小伙伴呦~' auto-focus='true' placeholder-style="color:gray">  </textarea>

      <!--添加图片-->
      <view>
        <image src='../../images/product-commit/add-pic.png' mode="aspectFit" class="commit-addpic" bindtap="addPic"></image>
      </view>
       <view form-type="submit"  class='submitBtn'>提交</view>
  </form>

</view>