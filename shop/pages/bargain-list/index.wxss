/* banner */
page{background:#f2f2f2;}
.index-swiper{width:calc(100% - 40rpx);height:213rpx;margin-top:20rpx;padding:20rpx 20rpx 0 20rpx;background: #ffffff;}
.index-swiper-block{width: 100%;height: 100%;padding:0 10rpx;}
.swiper-img{width: 100%;height: 100%;border-radius:10rpx;}

/*list*/
.card-container{width: 100%;overflow: hidden;}
.card-container>.card-bottom{height: 20rpx;background:#f2f2f2;width: 100%;}
.card{background: #fff;padding:20rpx;}

.card .card-img{width: 100%;height:370rpx;border-radius:10rpx;}
.card .card-msg{font-size:32rpx;color:#222222;display: -webkit-box;-webkit-box-orient:vertical;overflow: hidden;-webkit-line-clamp:2;margin-bottom:20rpx;font-weight:500;}
.card .card-handle .price{width:100%;line-height:46rpx;display: flex;align-items: center;justify-content: space-between;align-items: flex-start;}
.card .card-handle .price>view{}
.card .msg-container{position: relative;}
.card .card-handle .price .icon{font-size:20rpx ;color:#ea4149;}
.card .card-handle .price text.price-a{font-size:32rpx;color:#ea4149;}
.card .card-handle .price text.price-d{font-size:24rpx;color:#808080;text-decoration:line-through;margin-left:15rpx;}
.card .card-handle .price text.price-c{font-size:48rpx;color:#ea4149;}
.card .card-handle .price>text.btn{float:right;font-size:28rpx;padding:10rpx 24rpx;background:#808080;color:#fff;line-height:32rpx;display:inline-block;border-radius:6rpx;background:linear-gradient(to right,#eb414a 30%,#fe6748)}
.card .card-handle{display: flex;justify-content: space-between;align-items: center;}
.card .msg-swiper{position: absolute;width:calc(100% - 80rpx);height:80rpx;font-size:24rpx;right:0;top:-90rpx;line-height:60rpx;display: inline-block;color:#fff;text-align:right; background: linear-gradient(to bottom,rgba(0,0,0,0),rgba(0,0,0,0.4));padding:0 40rpx;}
.index-swiper-block{height: 60rpx;margin-top:15rpx;}
.msg-swiper view{display: flex;align-items: center;width: 100%;height: 100%;justify-content: flex-end;}
.msg-avatar{height:50rpx;width: 50rpx;border-radius: 40rpx;margin-right: 10rpx;background: #fff;}