/* 搜索框 */
.search{width: 90%;background-color: #f2f2f2;border-radius: 40rpx;height: 70rpx;line-height: 70rpx;margin:28rpx 5% 0;box-sizing: border-box;}
.search image{width: 40rpx;height: 40rpx;margin-left: 20rpx;display: inline-block;margin-bottom: -10rpx;}
.search text{font-size: 26rpx;margin-left: 10rpx;color: #777777;display: inline-block;}
.headerTabs{ display: flex;justify-content: space-between;padding:0rpx 60rpx 30rpx;font-size: 26rpx;border-bottom: 1px solid #e8e8e8;box-sizing: border-box;}
.headerTabs image{width: 18rpx;height: 22rpx;vertical-align: middle;margin-left: 10rpx;}
.headerTabs view.isActive{color:#ea4149;font-weight: 500;}

/*隐藏scroll-view的滚动条*/
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}


/*头部选项卡*/
.navbar{background: #fff;  top:0; z-index:100; white-space: nowrap;height:100rpx;width:100%}
.navbar .item{position: relative; flex: auto;text-align: center;line-height: 100rpx; color:#535353; font-size: 26rpx; display: inline-block; width: 22%; box-shadow: 0 5px 35rpx -10rpx #f2f2f2;z-index: 10;}
.navbar .item.active{ color: #ea4149;font-weight:500;}
.navbar .item.active:after{content: "";display: block;position: absolute;bottom: 20rpx; left: 0; right: 0; height: 4rpx; width:50%; margin: auto;background: #ea4149;z-index: 10;}

/*左部导航栏*/
/* 下部分类 */
.scroll{background: #f2f2f2;display: flex;}
.scroll-left{height:calc(100vh - 260rpx);width: 20%;background-color: #fff;border-top: 1px solid #e8e8e8;float: left;}
.scroll-left view{display: block;font-size: 25rpx;height: 120rpx;width:calc(100% - 24rpx);border-bottom:1px solid #e8e8e8;color:#022222;display: flex;align-items: center;justify-content:center;padding:0 12rpx;}
.scroll-left .scroll-left-active{color:#ea4149;background-color: #f2f2f2;}

/*右侧商品列表*/
.scroll-right{height:calc(100vh - 370rpx);width:80%;}
.scroll-right .shop-card{ width:calc(50% - 15rpx);background: #fff;border-radius: 10rpx;padding-bottom: 25rpx;float: left;margin-bottom:10rpx;min-height: 465rpx}
.scroll-right .shop-list>.shop-card:nth-child(even){margin-left:10rpx;}

.scroll-right .shop-card>.shop-img{width: 100%;height:290rpx;border-radius: 10rpx;}
.scroll-right .shop-card>.shop-title-contain{width: calc(100% - 20rpx);padding:0 10rpx;}
.scroll-right .shop-card>.shop-title-contain>.shop-title{font-size:25rpx;color:#222222; text-overflow: -o-ellipsis-lastline;overflow: hidden;text-overflow: ellipsis;-webkit-line-clamp: 2;line-clamp: 2;-webkit-box-orient: vertical;height:70rpx;display: -webkit-box;}
.scroll-right .shop-card>.shop-price{padding:10rpx;margin:0;line-height: 32rpx;}
.scroll-right .shop-card>.shop-price>text:first-child{font-size:20rpx;color:#ea4149; }
.scroll-right .shop-card>.shop-price>text:nth-child(2){font-size:32rpx;color:#ea4149;font-weight: 500;display: inline-block;margin-right:10rpx;}
.scroll-right .shop-card>.shop-price>text:nth-child(3){font-size:20rpx;color:#777777;text-decoration:line-through;}
.scroll-right .shop-card>.shop-label{display: flex;align-items: center;}
.scroll-right .shop-card>.shop-label>text{font-size:20rpx;display: inline-block;padding:2rpx 10rpx;color:#ea4149;border:1rpx solid #ff375c;margin-left:8rpx;border-radius: 6rpx;}
.scroll-right .shop-card>.shop-label>text:nth-child(2){color:#ff9649;border:1rpx solid #ff9649;}
.shop-list{width:100%;padding:10rpx;}
.scroll-right .shop-card::after{display: block;content:'';clear: both;}
.mask{width: 100%;height: 100%;position: fixed;top: 0;left: 0;background: #000000;z-index: 20;opacity: 0.6;}
.mpage {z-index: 10;position: fixed;bottom: 0;top: 0;background: rgba(0,0,0,.6)}
  .withAnimate {transition: all 300ms ease;-webkit-transform: translate3d(0, 0, 0);
    -moz-transform: translate3d(0, 0, 0);
    -ms-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
    -webkit-backface-visibility: hidden;
    -moz-backface-visibility: hidden;
    -ms-backface-visibility: hidden;
    backface-visibility: hidden;
    -webkit-perspective: 1000;
    -moz-perspective: 1000;
    -ms-perspective: 1000;
    perspective: 1000;
  }

  .user {position: fixed;top: 0;bottom: 0;right: 0;z-index: 100;border-right: 1px solid #dbdbdb;box-sizing: border-box;}
  .user .user-box {position: absolute;top: 0;bottom: 0;background: #f2f2f2;}
  .user-box .filter-msg{font-size:38rpx;padding-bottom: 20rpx;border-bottom: 1px solid #ddd;color:#222222;background: #fff;text-align: center;overflow: hidden;}
  .user-box .price-msg{font-size:32rpx;padding-left: 20rpx;padding-top:20rpx;background: #fff;width: calc(100% - 20rpx)}
  .user-box .price-input-containr{display: flex;padding: 20rpx;border-bottom: 2rpx solid #e8e8e8;background: #fff;width: calc(100% - 40rpx)}
  .user-box .price-input-containr>input{border: 1px solid #c8c8c8;width: 40%;font-size:24rpx;color:#222222;background: #f2f2f2;border-radius: 10rpx;padding:0 10rpx;height: 1.6rem;line-height: 1.6rem;}
  .user-box .price-input-containr>text{display: inline-block;margin: 0 20rpx;color:#c8c8c8;}
  .user-box .filter-list{height: 880rpx;background: #f2f2f2;padding-bottom: 20rpx;}
  .user-box .filter-item{display:flex;justify-content: space-between;font-size:30rpx;padding:20rpx;border-bottom: 1px solid #e8e8e8;background: #fff;width: calc(100% - 40rpx);}
  .user-box .filter-item>view:first-child{}
  .user-box .filter-item>view:nth-child(2){}
  .user-box .filter-item>view:nth-child(2)>image{width: 28rpx;height: 20rpx}
  .user-box .btn-position{position: absolute;bottom: 0;left: 0;}
  .user-box .btn-container{justify-content: flex-start;display: flex;font-size:30rpx;}
  .user-box .btn-container>view{width:50%;text-align: center;padding:20rpx 0;background: #fff;}
  .user-box .btn-container>view:last-child{background:linear-gradient(to right bottom,#eb414a 50%,#fe6748);color:#fff;}

  /* 底部导航 */
.tabbar{width: 100%;position: fixed;bottom: 0;z-index: 10;background-color: #F7F7FA;border-top: 1px solid #e2e2e2;padding: 10rpx 0;}
.tabbar-block{width: 25%;float: left;text-align: center;}
.tabbar-active{color: #ea4149;}
.tabbar-block image{width: 56rpx;height: 56rpx;}
.tabbar-block text{display: block;width: 100%;text-align: center;font-size: 20rpx;margin-top: -6rpx;}
.tabbar-block-cart{position: relative;}

.isIpx{padding: 10rpx 0 68rpx;}

/*没有商品列表时*/
.no-product{width: 40%;margin: auto;position: absolute;top:0;left:0;right:0;bottom:0;}
.no-more-product-msg{font-size:28rpx;text-align: center;color:#222222;clear:both;}

