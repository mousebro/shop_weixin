/* pages/integral-detail/index.wxss */
page{background: #f2f2f2;}
.header-tabbar{width: 100%;height:95rpx;background: #fe7d49;display: flex;}
.header-tabbar>view>text:first-child{color:#fff;font-size:32rpx;display: inline-block;position: relative;}
.header-tabbar text.active::after{display: inline-block;width: 100rpx;height: 6rpx;content:'';background: #fff;position: absolute;bottom:-23rpx;left:0rpx;}
.header-tabbar>view{width: 50%;height: 100%;display: flex;justify-content: center;align-items: center;}
.activeBar{display:inline-block;width: 100rpx;height:6rpx;background: #fff;position: absolute;top:90rpx;}
.activeBarMoveL{left:calc(75% - 48rpx);transition:all .3s linear;}
.activeBarMoveR{left:calc(25% - 48rpx);transition: all .3s linear;}

.header-container{height:290rpx;display: flex;flex-direction: column;align-items: center;width: 100%;}
.header-container .point-container{height:100%;display:flex;justify-content:center;align-items: flex-start;width:calc(100% - 60rpx);padding:20rpx 10rpx;box-sizing: border-box;flex-direction: column;}
.header-container .point-container>text{font-size:32rpx;color:#ffffff;}
.header-container .point-container .creadit{font-size:60rpx;color:#ffffff;margin: 10rpx 0;}

/*购物金记录*/
.record-list{width: calc(95% - 40rpx);position: absolute;background: #fff;padding:40rpx 20rpx;left:2.5%;top:330rpx;border-radius: 20rpx;}
.record-list>.record-title{font-size: 36rpx;color:#222;font-weight: bold;}
.record-list .record-item{border-bottom:1px solid #e8e8e8;padding:20rpx 0;}
.record-list .record-item>view{display: flex;justify-content: space-between;padding:15rpx 0;}
.record-list .record-item>view>view.name{font-size:30rpx;color:#222222;width: 80%;overflow: hidden;display: inline-block;white-space: nowrap;text-overflow: ellipsis;}
.record-list .record-item>view>view:last-child{font-size:25rpx;color:#999999;}
.record-list .record-item>view>view.time{font-size:25rpx;color:#999999;}
.record-list .record-item>view>view.record{font-size:25rpx;color:#ed4b49;}
.record-list .record-item>view>view.record-del{color:#3b9977;}
.record-scroll-view{height:720rpx;}
::-webkit-scrollbar{width: 0;height:0;color:transparent;background: transparent;}