/* pages/discount/index.wxss */
page{background: #f2f2f2;height: 100%;}
.discount-all-container{height: 100%;}
.fixed-header{width: 100%;}
.headerTabs{ display: flex;justify-content: space-between;padding:32rpx 96rpx;font-size: 30rpx;box-sizing: border-box;background: #fff;color:#222222;}
.headerTabs image{width: 18rpx;height: 22rpx;vertical-align: middle;margin-left: 10rpx;}
.headerTabs view.isActive{position: relative;}
.headerTabs view.isActive::after{position: absolute;display: block;content: '';border: 1px solid red;width: 90%;top:68rpx;left: 0;right: 0;margin: 0 auto}


.fontRed{color:#ea4149 !important;}
.fontGray{color:#555555 !important;}
.fontBlack{color:#222222 !important;}


/*无优惠券提示*/
.no-coupons{height: calc(100% - 180rpx);display: flex;flex-direction: column;align-items: center;justify-content: center;}
.no-coupons>.none-img{width:276rpx;height:322rpx;margin-bottom: 40rpx;}
.no-coupons>.none-msg{font-size:30rpx;color:#818181;line-height: 40rpx;}

/*优惠券部分*/
.coupon-list{margin-top:225rpx;}
.coupon-list>.coupon-item{width:calc(100% - 40rpx);min-height:230rpx;margin:0 auto;position: relative;}
.coupon-list>.coupon-item>.coupon-msg{width:100%;height:76%;display: flex;justify-content: space-between;align-items: center;}
.coupon-list>.coupon-item .coupon{width:115rpx;height:74rpx;margin-left:40rpx;}
.coupon-list>.coupon-item .left-side{display: flex;justify-content: flex-start;height:80%;align-items: center;padding-top:20rpx;}
.coupon-list>.coupon-item .left-side>view{font-size:30rpx;color:#222222;margin-left:30rpx;display: flex;flex-direction: column;justify-content: center;}
.coupon-list>.coupon-item .left-side>view>view:first-child{font-weight: bold;}
.coupon-list>.coupon-item .left-side>view>view:nth-child(2){font-size:22rpx;color:#ea4149}
.coupon-list>.coupon-item .left-side>view>view:nth-child(2)>text:first-child{font-size:50rpx;}
.limit-times{font-size:18rpx;color:#777777;display: inline-block;}
.coupon-list>.coupon-item .right-side{height:123rpx;width: 29%;display: flex;justify-content: center;flex-direction: column;align-items: center;overflow: hidden;margin-right:10rpx;padding-top:10rpx;}
.coupon-list>.coupon-item>.coupon-msg>.right-side>text{border-radius:30rpx;display:inline-block;font-size:30rpx;color:#fff;}
.coupon-list>.coupon-item>.coupon-limit{position: relative;font-size:24rpx;color:#777777;padding-left:30rpx;width: calc(100% - 30rpx);padding-top:25rpx;}
.coupon-list>.coupon-item>.coupon-limit>.limit-msg-container{width: 80%;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;}
.right-side>view{width:60%;}
.coupon-list>.coupon-item>.coupon-msg>.right-side>text.has-received{background:#c6c6c6;color:#ffffff;}
.coupon-list>.coupon-item>.coupon-msg>.right-side>text.to-use{width:157rpx;height:55rpx;background:linear-gradient(to left,#dc4247 7%,#ec6649);text-align: center;line-height: 55rpx; }

/*隐藏scroll-view的滚动条*/
::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
    }
    
.used-coupon-msg{margin-left: 180rpx;}
.used-coupon-msg>view>view{color:#fff !important;}
.coupon-item>.none-msg-used{color:#fff !important;}
.right-script{height: 48rpx;font-size:30rpx;background:#979797;width:100% !important;transform: rotate(45deg);text-align: center !important;line-height: 48rpx;color:#fff;margin-left:104rpx;margin-top:-40rpx;}

/*限制商品下拉框*/
.image-More{width: 16rpx;height: 24rpx;position: absolute;right:30rpx;top:30rpx}
.limit-msg-base{background: #fff;width:calc(100% - 3rpx);white-space: normal;padding-bottom:30rpx;background: #fff;margin-left:-18rpx;padding-left:18rpx;border-top-left-radius: 30rpx;border-top-right-radius: 30rpx;margin-bottom:10rpx;}
.limit-msg-base>.scroll-view{max-height: 120rpx;width: calc(100% - 60rpx);}
.imageRotate{transform: rotate(90deg);transition: all .1s linear;}
.imageRotateT{transform: rotate(0);transition: all .1s linear;}

/**/
.grey-backG{background: #cbcbcb !important;}

/*兑换码输入框*/
.header-container{position: fixed;top:0;right: 0;z-index: 10;width: 100%;}
.search-container{display: flex;padding:40rpx;padding-bottom:15rpx;width: calc(100% - 80rpx);justify-content: space-between;align-items: center;background: #fff;}
.search-box{display: flex;padding: 0 40rpx;border-radius:100rpx;font-size: 26rpx;background: #f2f2f2;width: 424rpx;height: 60rpx;align-items: center;}
.search-container>.exchange-btn{width:116rpx;height: 54rpx;background: #cbcbcb;border-radius: 27rpx;color:#fff;font-size:30rpx;line-height:54rpx;text-align: center;}
.search-container>.focus-Btn{background: linear-gradient(to right,#dc4247,#ec6649);}