/* pages/shopping-gold/index.wxss */

  /* 底部导航 */
  .tabbar{width: 100%;position: fixed;bottom: 0;z-index: 10;background-color: #F7F7FA;border-top: 1px solid #e2e2e2;padding: 10rpx 0;}
  .tabbar-block{width: 25%;float: left;text-align: center;}
  .tabbar-active{color: #ea4149;}
  .tabbar-block image{width: 56rpx;height: 56rpx;}
  .tabbar-block text{display: block;width: 100%;text-align: center;font-size: 20rpx;margin-top: -6rpx;}
  .tabbar-block-cart{position: relative;}

  .isIpx{padding: 10rpx 0 68rpx;}
  button::after{border: none;}
/*头部*/
.header-container{width: 100%;height:540rpx;background-image:linear-gradient(to top,#ff6849 0%,#f95c49 50%,#ea4149 100%);padding-top:20rpx;}
.header-container>.points-msg{display: flex;width: 100%;justify-content: space-between;}
.header-container>.points-msg>view:first-child{width:70%;padding-left:20rpx;padding-top:10rpx;}
.header-container>.points-msg>view:first-child>text{font-size:32rpx;color:#fff;}
.header-container>.points-msg>view:first-child>view{display: flex;align-items: flex-end;}
.header-container>.points-msg>view:first-child>view>view:first-child{font-size:68rpx;color:#fff;display: inline-block;margin-right:10rpx;display: inline-block;}
.header-container>.points-msg>view:first-child>view>view:last-child{font-size:24rpx;color:#fff;padding:4rpx 25rpx;background: rgba(255,255,255,.2);border-radius: 20rpx;display: inline-block;margin-bottom:15rpx;}
.header-container>.points-msg>view:last-child{width: 30%;overflow: hidden;display: flex;flex-direction: column;align-items: flex-end;}
.header-container>.points-msg>view:last-child>text{display:inline-block;text-align: right;font-size:26rpx;color:#fff;padding:10rpx 0;background: rgba(255,255,255,.2);border-radius: 80rpx;margin-top:20rpx;margin-right:-20rpx;width: 180rpx;text-align: center;}

/*签到进度*/
.sign-progress{width: calc(100% - 40rpx);display: flex;justify-content: space-between;padding:70rpx 20rpx; position: relative;z-index: 2; }
.sign-progress>view.progress-leader{margin-top:30rpx;}
.sign-progress>view>view.icon_active{width: 50rpx;height: 50rpx;border-radius: 60rpx;	box-shadow: 0px 5px 7px 1px rgba(206, 61, 22, 0.48);background:transparent; position: relative;overflow: hidden;border:10rpx solid #ffee5b;z-index: 12;}
.sign-progress>view>view.icon_active::after{display:block;content: "";width: 50rpx;height: 50rpx;border-radius: 60rpx;	background:#fbb11b;position: absolute; z-index: 10;top:0;right:0;left:0;bottom:0;margin:auto;}
.sign-progress>view>view.icon_active::before{display:block;content: "";width: 55rpx;height: 55rpx;border-radius: 60rpx;	background:#fdc72f;position: absolute; z-index: 10;top:6rpx;left:8rpx;z-index: 11}
.sign-progress>view>view.icon>text{position: absolute;z-index: 15;font-size:24rpx;top:0;right:0;bottom:0;left:0;margin: auto;color:#ff6000;line-height: 48rpx;text-align: center;font-weight: 600;}
.sign-progress>view>view.icon_active>text{position: absolute;z-index: 15;font-size:24rpx;top:0;right:0;bottom:0;left:0;margin: auto;color:#ff6000;line-height: 48rpx;text-align: center;font-weight: 600;}
.sign-progress>view>view.icon{width: 70rpx;height: 70rpx;border-radius: 70rpx;	box-shadow: 0px 5px 7px 1px rgba(206, 61, 22, 0.48);background:#fff; position: relative;overflow: hidden;}
.sign-progress>view>view.icon>text{line-height: 70rpx;}
.sign-progress::after{display: block;content: "";width: 80%;height: 8rpx;background: #fff;position: absolute;z-index: 1;top:0;right: 0;left: 0;bottom:0;margin:auto;}
.sign-progress .present{width:112rpx;height:100rpx;z-index: 3;margin-left:-16rpx;}
.sign-progress .gift-seven{z-index: 3;display: flex;flex-direction: column;align-items: center;margin-left:-30rpx;}
.sign-progress .gift-seven>view{font-size:24rpx;color:#fff;margin-top:10rpx;}
.sign-progress .days{font-size:24rpx;color:#fff;text-align: center;margin-top:10rpx;}
.sign-progress .days_issign{color:#fdc72f}
/*领取进度轮播图*/
.receive-carousel{width: 100%;margin-top: -20rpx;}
.receive-carousel>.swiper-view{height:70rpx;width: 75%;background:rgba(255,255,255,.6);margin: 0 auto;padding:0 40rpx;border-radius: 80rpx;}
.receive-carousel .msg-container{display: flex;align-items: center;}
.receive-carousel>.swiper-view .msg-container .avatar{width: 42rpx;height: 42rpx;border-radius: 42rpx;}
.receive-carousel>.swiper-view .msg-container .msg{font-size:28rpx;color:blue;margin-left:10rpx;color:#dc1700;}

/*发红包领购物金*/
.red-pocket-container{display: flex;justify-content: center;padding:40rpx 0 ;}
.red-pocket-img{height:170rpx;width:708rpx;}
/*隐藏scroll-view的滚动条*/
::-webkit-scrollbar{width: 0;height: 0;color: transparent;}
/*任务列表*/
.task-scroll-view{height:280rpx;width: 100%;}
.task-scroll-view .task-list>.task-item{width: calc(100% - 40rpx);display: flex;justify-content: space-between;align-items: center;padding:20rpx;}
.task-scroll-view .task-list>.task-item:not(:last-child){border-bottom:1px solid #e8e8e8}
.task-scroll-view .task-list>.task-item>view>.yaoqing{width:75rpx;height:65rpx;margin-right:20rpx;}
.task-scroll-view .task-list>.task-item>.yaoqing-container{width: 80%;display: flex;align-items: center;}
.task-scroll-view .task-list>.task-item>.yaoqing-container>view>text{font-size:30rpx;color:#222222;font-weight: bold;}
.task-scroll-view .task-list>.task-item>.yaoqing-container>view>view>view{font-size:24rpx;color:#ea4149;line-height: 24rpx;display: inline-block;}
.task-scroll-view .task-list>.task-item>.yaoqing-container>view>view>view:last-child{color:#555555;}
.task-scroll-view .task-list>.task-item  .task-btn{font-size:26rpx;background: linear-gradient(to left,#e73f24 0%, #f36f37 42%, #ff9e4a 100%);padding:10rpx 30rpx;border-radius: 40rpx;color:#fff;height: 86rpx;}

/*弹窗*/
.mask{width: 100%;height: 100%;position: fixed;top: 0;left: 0;background: #000000;z-index: 20;opacity: 0.6;}
.mask-task-bg{position: fixed;top: 0;left: 0;bottom:0;right:0;margin:auto;z-index:21;height: 624rpx;width: 589rpx;}
.mask-task-bg>.cancle-btn{position: absolute;top:-80rpx;right:-35rpx;width: 75rpx;height:75rpx;}
.mask-task-bg>view{position: absolute;bottom:150rpx;width: 100%;}
.mask-task-bg>view>view{font-size:44rpx;color:#222222;text-align: center;margin-bottom: 20rpx;}
.mask-task-bg>view>view>text.count{font-size:40rpx;color:#ea4149;}
.failMsg{width: 66%;margin:0 auto;}
/*幸运任务-卡片*/
.modal2{position: fixed;z-index: 21;width: 80%;border-radius: 10rpx;top: 100rpx;left: 10%;text-align: center;}
.modal2-body {position: fixed;top:0;left:0;right:0;bottom:0;margin:auto;height:795rpx;width:622rpx;}
.modal2-body image:nth-child(1){width: 100%;}
.modal2-body image:nth-child(2){width: 80rpx;position: absolute;top: -100rpx;right:-40rpx;}
.modalTitle2{position: absolute;top: 300rpx;left: 0;display: block;width: 100%;text-align: center;font-size:32rpx;}
.modalTitle2 text{color: red;font-size: 60rpx;margin: 0 10rpx;}
.modalTitle3{position: absolute;top: 400rpx;left: 0;display: block;width: 100%;text-align: center;font-size:32rpx;}
.modalTitle3 text:nth-child(1){color: red;font-size: 30rpx;margin-left:10rpx;}
.modalTitle3 text:nth-child(2){color: red;font-size: 50rpx;margin-right:10rpx;}
.modalButton{position: absolute;bottom: 140rpx;display: block;width: 100%;text-align: center;}
.modalButton text{background:linear-gradient(to bottom right,#ea4149,#ff8149);font-weight: bold;color: #ffffff;padding: 12rpx 30rpx;border-radius: 50rpx;font-size: 30rpx;}
.tcard1{transition: 2s; transform-style: preserve-3d;position:absolute;top:300rpx;left: 1%;width:33%;}
.tcard2{transition: 2s; transform-style: preserve-3d;position:absolute;top:300rpx;left: 33%;width:33%;}
.tcard3{transition: 2s; transform-style: preserve-3d;position:absolute;top:300rpx;left: 66%;width:33%;}

/* 幸运任务翻转卡牌 */
.trans-card{transform: rotateY(180deg);}

/*活动规则*/
.modal1{position: fixed;z-index: 21;width: 100%;height: 100%;text-align: center;top:0;left:0;right:0;bottom:0;}
.modal1 >view{width: 90%;position: absolute;top:0;left: 0;right:0;bottom: 0;margin: auto;height: 1170rpx;}
.modal1 >view> text{position: relative;z-index: 25;display: block;margin-top: 100rpx;font-size: 32rpx;color: #222222;font-weight: bold;}
.modal1 >view> text:before{content: '';position: absolute;width: 10%;height: 1rpx;background-color: #d6d6d6;top: 22rpx;left: 26%;}
.modal1 >view> text:after{content: '';position: absolute;width: 10%;height: 1rpx;background-color: #d6d6d6;top: 22rpx;right: 26%;}
.modal1 >view> image{position: absolute;width: 100%;top: 40rpx;left: 0;}
.modalRules{position: absolute;width: 100%;top: 150rpx;z-index: 23;text-align: left;height: 970rpx;box-sizing: border-box;}
.modalRules text{font-size: 24rpx;color: #777777;}
.modalRules-scroll{width: 90%;height: 100%;padding:0 5%;}
.close{position: absolute;z-index: 26;top: -5rpx;right: -35rpx;}
.close image{width: 70rpx;height: 70rpx;}


.awardRecord{z-index: 200;}

