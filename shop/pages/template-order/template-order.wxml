<template name="waiting-for-pay" data-id="{{id}}">
    <view class="wait-for-pay" bindtap='handleClick' data-orderId="{{id}}"> <!--传递订单Id-->
    <view class="wait-title">
      <view >
        <text class="wait-sub-title" wx:if="{{status==0}}">待付款</text>
        <text class="wait-sub-title" wx:if="{{status==1}}">待发货</text>
        <text class="wait-sub-title" wx:if="{{status==2}}">待收货</text>
        <text class="wait-sub-title" wx:if="{{status==3}}">已完成</text>
        <text class='wait-for-time'>{{createtime}}</text>
      </view>
      <text class='order-for-more' catchtap='handleClick'></text>
    </view>
    <view class='product-list'>
      <view class='product-item' wx:for="{{orderGoodsList}}" wx:key="{{item.id}}"> <!--只渲染两条数据，如果超过两条则用省略号提示-->
        <view>
          <image src="{{item.thumb}}" class="product-item-img"></image>
          <text class="product-item-text">{{item.title}}</text>
        </view>
        <text class="product-item-count">x{{item.total}}</text>
      </view>
      <view class="product-item-total product-item " style="justify-content:{{orderGoodsList.length<=2?'flex-end':'space-between'}}">
        <text class='product-item-eslise' wx:if="{{orderGoodsList.length>2}}" >...</text>
        <view >
          <text class='product-item-text'>共{{orderGoodsList.length}}件，实付</text>
          <text class='product-item-price'>￥{{oldprice}}</text>
        </view>
      </view>

    </view>
  </view>
  <view class='oprator-btn-container'>
      <button  size="mini" plain='true' class='cancle-btn' catchtap='cancleOrder' data-orderId="{{id}}" wx:if="{{status==0 ||status ==1}}">取消订单</button>
      <button size="mini" type="warn" plain='true' catchtap='gotoPay' data-orderId="{{id}}" wx:if="{{status==0}}">去付款</button>
      <button  size="mini" plain='true' class='cancle-btn' data-orderId="{{id}}" wx:if="{{status==2}}" catchtap='watchLogistics'>查看物流</button>
      <button size="mini" type="warn" plain='true' data-orderId="{{id}}" wx:if="{{status==3 || status==2}}" catchtap='comfiremFn'>确认收货</button>
  </view>
</template>