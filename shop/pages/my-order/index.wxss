/* pages/my-order/index.wxss */
@import "../template-order/template-order.wxss";
page{
  height: 100%;
  position: relative;
  background: #f2f2f2;
}
.view-container{height:calc(100% - 200rpx);background:#f2f2f2;position: relative;}
/*头部选项卡*/
.navbar{
  background: #fff;
  padding-top:30rpx;
  position: fixed;
  top:0;
  z-index:19; 
  white-space: nowrap;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  color:#535353;
  font-size: 32rpx;
  display: inline-block;
  width: 23%;
  box-shadow: 0 5px 35rpx -10rpx #f2f2f2;  
}
.navbar .item.active{
  color: #000;
  font-weight:400;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  width:30%;
  margin: auto;
  background: #eb4249;
}
/*隐藏scroll-view的滚动条*/
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
/*查看更多icon*/
.order-for-more{display: inline-block;border-right:2px solid #ccc;border-top:2px solid #ccc;width:16rpx;height: 16rpx;transform: rotate(45deg);}

.all-order-container{margin-top:120rpx;}
/*待付款*/
.waiting-for-pay-container{background: #fff;border-bottom:20rpx solid #f2f2f2;}
/*按钮样式*/
.oprator-btn-container{text-align:right;padding:20rpx 20rpx 20rpx;}
.oprator-btn-container button{margin-left: 30rpx;}
.oprator-btn-container>.cancle-btn{border: 1px solid #999999;color:#999999;}

/*提示信息*/
.warning-msg{height:100rpx;background:#f2f2f2;width:40%;display: inline-block;position: absolute;top:0;left:0;right: 0;bottom: 0;margin: auto;text-align: center;line-height: 100rpx;color:#eb4249;border-radius: 20rpx;font-size: 32rpx;}

/*红点*/
.red-point{width:20rpx;height:20rpx;background: #ea4149;border-radius:40rpx;margin-top:10rpx;margin-right:-40rpx;position: absolute;top:0;right: 35%;}

 /*全局导航*/
 .mask{width: 100%;height: 100%;position: fixed;top: 0;left: 0;background: #000000;z-index: 20;opacity: 0.6;}
.munu-container{position:fixed;bottom:400rpx;right:150rpx;z-index: 100;transform: rotate(-90deg);transform-origin:center;}
.first-menu{height:100rpx;width:100rpx;position: absolute;z-index: 100;top:0;right:0;transition:all .4s ease-in-out;border-radius:50%;transform: rotate(90deg);transform-origin:center;}
.menu-button{background: blue;width:98rpx;height:54rpx;border-radius:0;border-radius:10rpx 0 0 12rpx;position:fixed;bottom:325rpx;right:0rpx;z-index:100;font-size:23rpx;color:#fff;line-height:54rpx;background: #414141;text-align: center;}
.menu-button>.back-icon{height: 18rpx;width:12rpx;}

