<!--pages/search/index.wxml-->
<!--搜索页-->
<view class='search-container'>
  <view class='search-box' >
    <image src="../../images/search.png"  class='search-icon'></image>
    <input type='text' auto-focus placeholder='请输入商品名' class='search-input' bindinput="bindKeyInput"></input>
  </view>
  <!--如果没有搜索到相关产品，进行相对应的提示信息-->
  <view wx:if="{{isNoCatchData}}">
    <text>抱歉！没有搜索到相关商品。。。</text>
  </view>
  <!--展示搜回来的产品列表-->
  <scroll-view scroll-y style="height:1000rpx;" wx:if="{{productList}}">
    <view class='productList'>
      <view wx:for="{{productList}}" wx:key="{{item.id}}" bindtap="hrefToDetail">
        <!--左侧商品图片-->
        <view>
          <image src="{{item.imgUrl}}"></image>
        </view>
        <!--右侧商品信息、商品价格 -->
        <view class='productSubscrib'>
          <text >{{item.title}}</text>
          <view>
            <text>￥{{item.discount}}</text>
            <text>￥{{item.oldPrice}}</text>
          </view>
        </view>
      </view>
    </view>
  </scroll-view>
</view>
